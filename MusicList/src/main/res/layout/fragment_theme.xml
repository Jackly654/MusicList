<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <ImageView
        android:id="@+id/frag_theme_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/frag_theme_blur_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:scaleType="centerCrop" />

    <ScrollView
        android:id="@+id/frag_theme_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/base_title_height"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/frag_theme_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="180dp" >

            <ImageView
                android:id="@+id/frag_theme_info_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_big_play" />

            <LinearLayout
                android:id="@+id/frag_theme_info_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frag_theme_info_imageview"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/frag_theme_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Sweaty"
                    android:textColor="#f1f1f1"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/frag_theme_info_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_music"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=" x 3"
                    android:textColor="#f1f1f1"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/frag_theme_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frag_theme_info_title_layout"
                android:layout_marginRight="15dp"
                android:gravity="left|top"
                android:text="text"
                android:textColor="#f1f1f1"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>