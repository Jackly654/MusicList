<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#0000" >

    <LinearLayout
        android:id="@+id/main_tabgroup"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_tab_item_recommend"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:drawablePadding="-15dp"
            android:drawableTop="@drawable/btn_main_tab_01"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="推荐"
            android:textColor="@color/ios_text_selector"
            android:textSize="12sp"
            android:visibility="gone" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#4876FF"
            android:paddingTop="30dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/main_tab_item_theme"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:drawablePadding="-15dp"
            android:drawableTop="@drawable/btn_main_tab_02"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="主题"
            android:textColor="@color/ios_text_selector"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#4876FF"
            android:paddingTop="30dp" />

        <TextView
            android:id="@+id/main_tab_item_mystyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:drawablePadding="-15dp"
            android:drawableTop="@drawable/btn_main_tab_03"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="我的格调"
            android:textColor="@color/ios_text_selector"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#4876FF"
            android:paddingTop="30dp" />

        <TextView
            android:id="@+id/main_tab_item_user"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:drawablePadding="-15dp"
            android:drawableTop="@drawable/btn_main_tab_04"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="更多"
            android:textColor="@color/ios_text_selector"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_fragment_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/main_tabgroup"
         >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >
    </RelativeLayout>

